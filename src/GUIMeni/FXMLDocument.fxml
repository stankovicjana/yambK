<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.scene.paint.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>



<AnchorPane id="AnchorPane" prefHeight="380.0" prefWidth="443.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUIMeni.FXMLDocumentController">

    <children>

        <!-- Naslov -->
        <Label layoutX="300.0" layoutY="14.0" prefHeight="32.0" prefWidth="200.0"
               text="Igra Yamb" textAlignment="CENTER" textFill="#1801c1" />
        <!-- Labela za broj bacanja -->
        <HBox layoutX="20.0" layoutY="60.0" spacing="10.0" alignment="CENTER_LEFT">
            <children>
                <Label text="Preostala bacanja:" />
                <Label fx:id="rollCountLabel" text="3" />
            </children>
        </HBox>

       
        <!-- Levo: Tabela -->
        <GridPane fx:id="jambTable" layoutX="20.0" layoutY="100.0" hgap="5" vgap="5" />

        <!-- Desno: Kockice, dugme i zbir -->
        <VBox layoutX="620.0" layoutY="120.0" spacing="15" alignment="TOP_CENTER">
            <children>

                <!-- Kockice -->
                <HBox spacing="8">
                    <children>
                        <ToggleButton fx:id="dice0" text="?" />
                        <ToggleButton fx:id="dice1" text="?" />
                        <ToggleButton fx:id="dice2" text="?" />
                    </children>
                </HBox>
                <HBox spacing="8">
                    <children>
                        <ToggleButton fx:id="dice3" text="?" />
                        <ToggleButton fx:id="dice4" text="?" />
                        <ToggleButton fx:id="dice5" text="?" />
                    </children>
                </HBox>

                <!-- Dugme za bacanje -->
                <Button text="Baci kockice" onAction="#handleRollDice" />
                <Button text="ZavrÅ¡i igru" onAction="#handleFinishGame" />
                <Button fx:id="najava" text="Najavi polje" onAction="#handleNajaviPolje" layoutX="620.0" layoutY="350.0" />

                <!-- Prikaz trenutnog zbira -->
                <HBox spacing="5">
                    <Label text="Zbir:" />
                    <Label fx:id="sumLabel" text="0" />
                </HBox>

            </children>
        </VBox>

    </children>   
    <children>
        <MenuBar fx:id="MainMenu" layoutX="1.0" layoutY="2.0" prefHeight="25.0" prefWidth="760.0">
            <menus>
                <Menu fx:id="igra" mnemonicParsing="false" text="Igra ">
  
                    <items>
  
                        <MenuItem fx:id="zapocniIgru" mnemonicParsing="false" onAction="#zapocniIgru" text="Zapocni igru" />  
                        <MenuItem fx:id="pravilaIgre" mnemonicParsing="false" onAction="#pravilaIgre" text="Pravila igre" />  
                        <MenuItem fx:id="poeniKorisnika" mnemonicParsing="false" onAction="#poeniKorisnika" text="Poeni korisnika" />  
                    </items>
  
                </Menu>           
                <Menu fx:id="izlaz" mnemonicParsing="false" text="Izlaz ">
  
                    <items>
  
                        <MenuItem fx:id="izlazIzPrograma" mnemonicParsing="false" onAction="#izlazIzPrograma" text="Izadji" />  
                    </items>
  
                </Menu>           
            </menus>
        </MenuBar>
        <Label fx:id="statusLabel" text="" />
 
    </children>
</AnchorPane>
