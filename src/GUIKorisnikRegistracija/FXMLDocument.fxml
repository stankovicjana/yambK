<AnchorPane id="AnchorPane" fx:id="forma" prefHeight="520.0" prefWidth="321.0"
            styleClass="pozadina" stylesheets="@../CSS/stylesheet.css"
            xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="GUIKorisnikRegistracija.FXMLDocumentController">
    <children>
        <Label layoutX="70.0" layoutY="30.0" text="Registruj se:">
            <font>
                <Font size="14.0" />
            </font>
        </Label>

        <Label layoutX="44.0" layoutY="77.0" text="Ime:" />
        <TextField fx:id="ime" layoutX="44.0" layoutY="101.0" />

        <Label layoutX="44.0" layoutY="139.0" text="Prezime:" />
        <TextField fx:id="prezime" layoutX="44.0" layoutY="163.0" />

        <Label layoutX="44.0" layoutY="195.0" text="Korisničko ime:" />
        <TextField fx:id="korisnickoIme" layoutX="44.0" layoutY="219.0" />

        <Label layoutX="44.0" layoutY="254.0" text="Šifra:" />
        <PasswordField fx:id="sifra" layoutX="44.0" layoutY="279.0" />

        <!-- NOVO: Datum -->
        <Label layoutX="44.0" layoutY="314.0" text="Datum:" />
        <DatePicker fx:id="datum" layoutX="44.0" layoutY="338.0" />

        <!-- NOVO: Status (čuvamo selectedIndex kao int) -->
        <Label layoutX="44.0" layoutY="377.0" text="Status:" />
        <ComboBox fx:id="statusIndex" layoutX="44.0" layoutY="401.0" prefWidth="233.0" />

        <Button fx:id="registrujSe" layoutX="45.0" layoutY="445.0"
                mnemonicParsing="false" text="Registruj se" />
    </children>
</AnchorPane>
